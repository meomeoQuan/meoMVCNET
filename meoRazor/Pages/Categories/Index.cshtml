@page
@model meoRazor.Pages.Categories.IndexModel

<div class="container pt-3 pb-2">
    <div class="row">
        <div class="col-6">
            <h1>Categories</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-dark">
                <i class="bi bi-plus-square-fill"></i> Add Category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Category Order</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.objCategory.OrderBy(u => u.categoryOrder))
        {
            <tr>
                <td>@obj.categoryID</td>
                <td>@obj.categoryName</td>
                <td>@obj.categoryOrder</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-page="/Categories/Edit" asp-route-id="@obj.categoryID" class="btn btn-dark mx-1">
                            Edit
                        </a>
                        <a asp-page="/Categories/Delete" asp-route-id="@obj.categoryID" class="btn btn-danger mx-1">
                                Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
