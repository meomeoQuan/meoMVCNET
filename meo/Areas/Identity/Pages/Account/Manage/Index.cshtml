@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <form id="profile-form" method="post" enctype="multipart/form-data">
        <input asp-for="Input.userImage" type="hidden" />  <!-- Hidden input for existing image -->
        <input asp-for="Input.UserId" type="hidden"/>
        <div class="col-md-6 d-flex justify-content-center align-items-center">
            <div class="position-relative text-center">
                <!-- Display Profile Image -->
                @* <p>@Model.Input.userImage</p> *@
                <img src="@Model.Input.userImage"
                     alt="Profile Image"
                     class="img-fluid border shadow"
                     style="width: 300px; height: 300px; object-fit: cover; cursor: pointer;"
                     onclick="document.getElementById('ProfilePicture').click();">

                <!-- Hidden File Upload Input -->
                <input type="file" name="file" id="ProfilePicture" class="d-none" accept="image/*"
                       onchange="previewImage(event)">
            </div>
        </div>

        <div class="col-md-6">
            <div class="p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>

