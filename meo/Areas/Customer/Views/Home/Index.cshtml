@model IEnumerable<Product>

<div class="row pb-3">
	@foreach(var product in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
				     <div class="card border-0 p-3 border-top border-5 shadow rounded">
						 <img src="@product.ImageUrl" class="card-img-top rounded"/>
						 <div class="card-body pb-0">
							 <div>
								 <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
								 <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
							 </div>
							 <div>
								 <p class="text-dark text-center opacity-75 mb-0">List Price: <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span></p>
							 </div>
							 <div>
								 <p class="text-dark text-center opacity-75">As low as: <span>@product.Price100.ToString("c")</span></p>
							 </div>
							 <div>
								 <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient  form-control">Details</a>
							 </div>
						 </div>
					 </div>
				</div>
			</div>
		</div>
	}
</div>

@* ctrl K and D to align item  *@