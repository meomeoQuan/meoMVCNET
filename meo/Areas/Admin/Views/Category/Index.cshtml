@model List<Category>

@* <partial name="_Notification" /> *@


<table class="table table-bordered table-striped">
    <div class="container pt-3 pb-2">
        <div class="row">
            <div class="col-6">
                <h1>Category</h1>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-dark">
                    <i class="bi bi-plus-square-fill"></i> Add Category
                </a>
            </div>
        </div>
    </div>

    <thead>
        <tr>
            <th>CategoryID</th>
            <th>CategoryName</th>
            <th>CategoryOrder</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(o => o.CategoryOrder))
        {
            <tr>
                <td>@obj.CategoryID</td>
                <td>@obj.CategoryName</td>
                <td>@obj.CategoryOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryID" class="btn btn-dark mx-2">
                            Edit
                        </a>
                        <form asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryID" method="post" class="d-inline mx-2">
                            <button type="submit" class="btn btn-danger " onclick="return confirm('Are you sure you want to delete this Category?');">
                                Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
