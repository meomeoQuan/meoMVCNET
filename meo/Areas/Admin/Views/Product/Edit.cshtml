@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden" />

            <div class="form-floating py-2">
                <input asp-for="Title" class="form-control" id="Title" />
                <label asp-for="Title"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-floating py-2">
                <input asp-for="Author" class="form-control" id="Author" />
                <label asp-for="Author"></label>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="form-floating py-2">
                <textarea asp-for="Description" class="form-control" id="Description" ></textarea>
                <label asp-for="Description"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-floating py-2">
                <input asp-for="ISBN" class="form-control" id="ISBN" />
                <label asp-for="ISBN"></label>
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>

            <div class="form-floating py-2">
                <input asp-for="ListPrice" class="form-control" id="ListPrice" />
                <label asp-for="ListPrice"></label>
                <span asp-validation-for="ListPrice" class="text-danger"></span>
            </div>

            <div class="form-floating py-2">
                <input asp-for="Price" class="form-control" id="Price" />
                <label asp-for="Price"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-floating py-2">
                <input asp-for="Price50" class="form-control" id="Price50" />
                <label asp-for="Price50"></label>
                <span asp-validation-for="Price50" class="text-danger"></span>
            </div>

            <div class="form-floating py-2">
                <input asp-for="Price100" class="form-control" id="Price100" />
                <label asp-for="Price100"></label>
                <span asp-validation-for="Price100" class="text-danger"></span>
            </div>


            <div class="row mt-3 pb-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-dark form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control border">Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
