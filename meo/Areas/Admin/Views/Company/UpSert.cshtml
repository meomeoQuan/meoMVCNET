@model Company

<div class="card shadow border-0 mt-4 pb-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.CompanyID != 0 ? "Update" : "Create") Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="CompanyID" hidden />

            <div class="row">
                <!-- Form Section -->
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2">
                            <input asp-for="CompanyName" class="form-control" />
                            <label asp-for="CompanyName"></label>
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2">
                            <input asp-for="CompanyCity" class="form-control" />
                            <label asp-for="CompanyCity"></label>
                            <span asp-validation-for="CompanyCity" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2">
                            <input asp-for="CompanyStreetAddress" class="form-control" />
                            <label asp-for="CompanyStreetAddress"></label>
                            <span asp-validation-for="CompanyStreetAddress" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2">
                            <input asp-for="CompanyState" class="form-control" />
                            <label asp-for="CompanyState"></label>
                            <span asp-validation-for="CompanyState" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2">
                            <input asp-for="CompanyPostalCode" class="form-control" />
                            <label asp-for="CompanyPostalCode"></label>
                            <span asp-validation-for="CompanyPostalCode" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2">
                            <input type="file" name="file" class="form-control" />
                            <label asp-for="companyImage"></label>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-dark form-control">
                                    @(Model.CompanyID != 0 ? "Update" : "Create")
                                </button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary form-control border">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Image Preview Section -->
                <div class="col-2">
                    <img src="@Model.companyImage" width="100%"
                         style="border-radius:5px; border:1px solid #bbb9b9"  />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        const quill = new Quill('#editor', {
          theme: 'snow'
        });
    </script>
    
    <partial name="_ValidationScriptsPartial" />
}
