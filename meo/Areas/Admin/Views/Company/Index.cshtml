@model List<Company>

@* <partial name="_Notification" /> *@



    <div class="container pt-3 pb-2">
        <div class="row">
            <div class="col-6">
                <h1>Company</h1>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Company" asp-action="UpSert" class="btn btn-dark">
                    <i class="bi bi-plus-square-fill"></i> Add Company
                </a>
            </div>
        </div>
    <table id="myCompany" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>Street Address</th>
                <th>City</th>
                <th>State</th>
                <th>Postal Code</th>
                <th></th>
            </tr>
        </thead>
     
    </table>

    </div>
   
  
  

@section Scripts{
    @{
        <script src="~/js/Company.js"></script>
    }
}